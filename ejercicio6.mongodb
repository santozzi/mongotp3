use ('tiendaOnline');
db.ventas.aggregate([
  {
    $project:{
      mes:{$month:"$fecha"}
    }
  },
  {
    $group:{
      _id: "$mes",
      totalVendido:{$sum:1}
    }
  }
]);

db.ventas.aggregate([
  {
    $project:{
      diaDeLaSemana:{$dayOfWeek:"$fecha"},
   
    }
  },
  {
    $group:{
      _id:"$diaDeLaSemana",
      ventas:{$sum:1}
    }
  },
  {
    $sort:{ventas: -1}
  },
  {
    $limit:1
  }
]);

